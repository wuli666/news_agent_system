# ============================================================
# LLM Provider Configuration
# ============================================================
# Choose your LLM provider: qwen (DashScope API) or ollama (local deployment)
LLM_PROVIDER=qwen

# ============================================================
# DashScope (Qwen) Configuration - Used when LLM_PROVIDER=qwen
# ============================================================
# Get your API key from: https://dashscope.console.aliyun.com/apiKey
DASHSCOPE_API_KEY=
DASHSCOPE_API_BASE=https://dashscope.aliyuncs.com/compatible-mode/v1
# Qwen Models (see: https://help.aliyun.com/zh/model-studio/getting-started/models)
QWEN_MODEL=qwen-plus              # Options: qwen-turbo, qwen-plus, qwen-max, qwen-flash
QWEN_VL_MODEL=qwen-vl-max-latest  # For image/video understanding

# ============================================================
# Ollama Configuration - Used when LLM_PROVIDER=ollama
# ============================================================
# Ollama server URL (make sure Ollama is running)
OLLAMA_BASE_URL=http://localhost:11434
# Ollama models (download first with: ollama pull <model>)
OLLAMA_MODEL=qwen2.5:14b          # Options: qwen2.5:14b, llama3.1:8b, mistral:7b, etc.
OLLAMA_VL_MODEL=llava:13b         # For vision tasks: llava:13b, llava:7b, bakllava, etc.

# Agent Configuration
MAX_ITERATIONS=1
QUALITY_THRESHOLD=0.7
MIN_TEXT_NEWS=1
MIN_VIDEO_NEWS=1

# MCP Server Configuration

# USE_DIRECT_MODE - 性能优化选项（推荐开启）
# true  = 直接导入NewsNowService，无子进程开销，速度快（推荐）
# false = 通过MCP服务器调用，有子进程开销，支持远程MCP
USE_DIRECT_MODE=true

# NewsNow MCP Server - Real-time news aggregation
NEWSNOW_ENABLED=true
NEWSNOW_BASE_URL=https://newsnow.busiyi.world
NEWSNOW_BACKEND=python            # python（默认）或 node（仅当USE_DIRECT_MODE=false时使用）
NEWSNOW_PLATFORMS=toutiao:今日头条,baidu:百度热搜,weibo:微博热搜,douyin:抖音热点,zhihu:知乎热榜,bilibili-hot-search:Bilibili热搜
NEWSNOW_PER_PLATFORM_LIMIT=30
NEWSNOW_MAX_ITEMS=200
NEWSNOW_TIMEOUT_SECONDS=15
NEWSNOW_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/118.0 Safari/537.36
NEWSNOW_ACCEPT_LANGUAGE=zh-CN,zh;q=0.9,en;q=0.8
NEWSNOW_REFERER=https://newsnow.busiyi.world
# NEWSNOW_COOKIE=          # 如果目标实例需要 Cookie，可在此传入

# Optional: Additional MCP servers
MCP_NEWS_SERVER_URL=
MCP_VIDEO_SERVER_URL=

# LangSmith Tracing (optional but recommended for debugging)
# Get your API key from: https://smith.langchain.com/
LANGCHAIN_TRACING_V2=false          # Set to true to enable tracing
LANGCHAIN_API_KEY=                  # Your LangSmith API key
LANGCHAIN_PROJECT=news-agent-system # Project name in LangSmith
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

# Logging
LOG_LEVEL=INFO
DEBUG=False

# Email Notification (optional)
# Set EMAIL_ENABLED=true to send the HTML report via SMTP after each run.
EMAIL_ENABLED=false
EMAIL_SMTP_HOST=smtp.example.com
EMAIL_SMTP_PORT=465
EMAIL_SMTP_USER=your_smtp_user
EMAIL_SMTP_PASSWORD=your_smtp_password
EMAIL_FROM=News Agent <no-reply@example.com>
EMAIL_TO=you@example.com,other@example.com
EMAIL_USE_SSL=true     # typical for 465
EMAIL_USE_TLS=false    # typical for 587 (set SSL=false, TLS=true)
